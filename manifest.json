{
  "manifest_version": 2,

  "name": "Just The Music",
  "description": "This extension hides the visual portion of videos and album covers on music sites",
  "version": "2.0",

  "browser_action": {
    "default_icon": "boombox_128.png"
  },

  "icons": { 
    "16": "boombox_16.png",
    "48": "boombox_48.png",
    "128": "boombox_128.png"
  },

  "background":{
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab"
  ]
}