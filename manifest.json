{
  "manifest_version": 2,

  "name": "Just The Music",
  "description": "This extension hides the visual portion of videos and album covers on music sites",
  "version": "2.1",

  "browser_action": {
    "default_icon": "img/boombox_128.png"
  },

  "icons": { 
    "16": "img/boombox_16.png",
    "48": "img/boombox_48.png",
    "128": "img/boombox_128.png"
  },

  "background":{
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "activeTab"
  ]
}